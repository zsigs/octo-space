<link rel="stylesheet" href="/css/form.css">
<div class="wrapper">
  <div class="form-container">
    <h1 class="form-title">New Password</h1>
    <form action="/update-password" method="post">
      <label for='new-password'>new password</label>
      <input type='password' name='new-password' id='new-password-input'>
      <label for='new-password-confirm'>new password confirm</label>
      <input type='password' name='new-password-confirm' id='new-password-confirm-input'>
      <br>
      <button type='submit'>Update</button>
    </form>
    <div class="form-footer">
      <div class="link">
      <a href="/octo/{{currentUsername}}" class="underline-hover">Cancel</a>
      </div>
      {{#if errorMessage}}
      <p>{{ errorMessage }}</p>
      {{/if}}
    </div>
  </div>
</div>