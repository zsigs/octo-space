<link rel="stylesheet" href="/css/home.css">
<div class="wrapper">
  <div class="container">
    <h1> Octo Space </h1>

    <br>
    <br>

    <div>
      {{#each topics}}
      <a href="/topics/{{this}}">{{this}}</a>
      {{/each}}
    </div>

    <br>
    <br>

    <br>
    <br>

    <div class="feed">
      {{#each feed.movies}}
      <div class="card">
        <div class="type-tag">{{this.type}}</div>
        <div class="card-title">{{this.title}}</div>
        <p class="card-info">{{this.plot}}</p>
        <div class="director">Director: {{this.director}}</div>
        <div class="actor">Actors: {{this.actors}}</div>
        {{!-- <p class="">{{this.poster}}</p> --}}
        <div class="card-footer">

          <table id="footer-info">
            <tr>
              <th>release date</th>
              <th>runtime</th>
              <th>lang</th>
              <th>genre</th>
            </tr>
            <tr>
              <td>{{this.releaseDate}}</td>
              <td>{{this.runtime}}</td>
              <td>{{this.lang}}</td>
              <td>{{this.genre}}</td>
            </tr>
          </table>


        </div>
        <a href="" class="like-btn" data-id="{{this._id}}" data-type="movie">Like</a>
      </div>
      <br>
      {{/each}}
    </div>
  </div>
</div>

{{#if currentUsername}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js"></script>
<script src="/javascript/like.js"></script>
{{/if}}